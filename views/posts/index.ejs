<!DOCTYPE html>
<html lang="ko">
<head>
    <% include ../partials/head %>
</head>
<body>
	<!-- Navigation -->
	<% include ../partials/nav %>

	<!-- Introduction -->
	<% include ../partials/intro %>

	<!-- Content -->
	<div class="content">
		<div class="container">

      <!-- content start -->

      <% if(posts.length){ %>
        <% posts.forEach(function(post){ %>
          <!-- Post -->
  			<div class="post">
  				<!-- Heading -->
  				<a href="/posts/<%= post.id %>"><h1><%= post.title %></h1></a>
  				<hr>
  				<div class="in-content">
  					<p>
  						<%- escape(post.body).replace(/\n/g, '<br/>') %>
  					</p>
  					<a class="read-more" href="/posts/<%= post.id %>">Read more</a>
  				</div>
  				<div class="foot-post">
  					<div class="units-row">
  					    <div class="unit-100">
  					    	<strong>date:</strong>
  					    	<%= post.createdAt.toLocaleDateString() %>
  					    </div>
  					    <div class="unit-100">
  					    	<strong>COMMENTS:</strong>
  					    	<a href="#">3</a>
  					    </div>
  					</div>
  				</div>
  			</div>
  			<!-- /post -->

        <% }) %>
      <% } else { %>
        <p>작성된 글이 없습니다.</p>
      <% }%>

      <% if(user) { %>
      <a href="/posts/new" class="btn btn-single">new</a>
      <% } %>
      <!-- //content start -->


		</div>
	</div>

	<footer>
		<% include ../partials/footer %>
	</footer>

	<!-- Javascript -->
	<% include ../partials/js %>
</body>
</html>
