<!-- views/posts/partials/show.ejs -->
<!doctype html>
<html lang="ko">
<head>
  <% include ../partials/head %>
</head>
<body>
<header>
  <% include ../partials/header %>
</header>
<div class="posts">
  <% include partials/top %>
  <!-- main start -->
  <div class="show">
    <h3><%= data.title %></h3>
    <p>
      <%= data.createdAt.toLocaleDateString() %>
      <%= data.createdAt.toLocaleTimeString() %>
    </p>
    <div class="body">
      <%= data.body %>
    </div>
    <div class="tool">
      <a href="/posts">list</a>
      <a href="/posts/<%= data._id %>/edit">edit</a>
      <form class="btn_delete" action="/posts/<%= data._id %>?_method=delete" method="post">
        <button type="submit" name="button">delete</button>
      </form>
    </div>
  </div>
  <!-- main end -->
</div>
<footer>
  <% include ../partials/footer %>
</footer>
</body>
</html>
